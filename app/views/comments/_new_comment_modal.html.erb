<!-- Modal -->
<div class="modal fade" id=<%= "newCommentForIssue_#{issue.id}" %> tabindex="-1" role="dialog" aria-labelledby=<%= "newCommentForIssue_#{issue.id}Title" %> aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id=<%= "newCommentForIssue_#{issue.id}Title" %>>New Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'comments/form', issue: issue, comment: Comment.new %>
      </div>
    </div>
  </div>
</div>
